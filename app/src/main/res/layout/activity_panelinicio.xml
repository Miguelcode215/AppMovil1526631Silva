<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Panelinicio"
    android:orientation="vertical"
    android:background="#009bff">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_margin="1dp"
        android:columnCount="3"
        android:rowCount="2">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/usuariov"
            android:layout_marginTop="17dp"
            android:layout_marginStart="15dp">
        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del usuario"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="20sp">
        </TextView>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/cerrar"
            android:layout_marginStart="15dp"
            android:layout_row="1"
            android:layout_column="0">
        </ImageView>

        <Button
            android:id="@+id/btn_cerrar_sesion"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_row="1"
            android:layout_column="1"
            android:text="Cerrar Sesion"
            android:layout_marginStart="5dp"
            android:backgroundTint="@color/design_default_color_error">
        </Button>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/dd"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_row="0"
            android:layout_column="2">
        </ImageView>

    </GridLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="30dp"
        android:backgroundTint="@color/black"
        android:layout_marginTop="10dp">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="60dp"
            android:columnCount="2"
            android:rowCount="3">

            <androidx.cardview.widget.CardView
                android:layout_row="0"
                android:layout_column="0"
                android:backgroundTint="@color/white"
                android:layout_width="150dp"
                android:layout_marginEnd="30dp"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <ImageView
                        android:id="@+id/btn_cliente"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/clientes"
                        >
                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CLIENTES"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:backgroundTint="@color/black">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_row="0"
                android:layout_column="1"
                android:backgroundTint="@color/white"
                android:layout_width="150dp"
                android:layout_marginEnd="30dp"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/compras"
                        >
                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="VENTAS"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:backgroundTint="@color/black">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_row="1"
                android:layout_column="0"
                android:backgroundTint="@color/white"
                android:layout_width="150dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/productos">
                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PRODUCTOS"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:backgroundTint="@color/black">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_row="1"
                android:layout_column="1"
                android:backgroundTint="@color/white"
                android:layout_width="150dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/configuraciones"
                        >
                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CONFIGURACIONES"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:backgroundTint="@color/black">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_row="2"
                android:layout_column="0"
                android:backgroundTint="@color/white"
                android:layout_width="150dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@drawable/pagos"
                        >
                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PAGOS"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:backgroundTint="@color/black">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_row="2"
                android:layout_column="1"
                android:backgroundTint="@color/white"
                android:layout_width="150dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/grafica"
                        >
                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="REPORTES"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:backgroundTint="@color/black">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>