<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registrar_cliente"
    android:background="#009bff"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTRAR CLIENTE"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:padding="20dp">
    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="30dp"
        android:backgroundTint="#aed6f1"
        android:layout_marginTop="10dp">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="1"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/clientes"
                android:layout_column="0"
                android:layout_row="0"/>

            <EditText
                android:id="@+id/txt_DNI_cliente"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_marginStart="50dp"
                android:layout_marginTop="45dp"
                android:hint="Ingrese su DNI"
                android:textColor="@color/black"
                android:inputType="number"/>
        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_marginTop="150dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txt_apellido_cliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="11dp"
                android:hint="Ingrese sus Apellidos"
                android:inputType="text"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/txt_nombre_cliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="11dp"
                android:layout_marginTop="20dp"
                android:hint="Ingrese su Nombre"
                android:inputType="text"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/txt_telefono_cliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="11dp"
                android:layout_marginTop="20dp"
                android:hint="Ingrese su numero de Telefono"
                android:inputType="number"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/txt_direccion_cliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="11dp"
                android:layout_marginTop="20dp"
                android:hint="Ingrese su Direccion de domicilio"
                android:inputType="text"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/txt_email_cliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="11dp"
                android:layout_marginTop="20dp"
                android:hint="Ingrese su correo o email (opcional)"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/btn_guardar_cliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="100dp"
                android:text="GUARDAR"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>